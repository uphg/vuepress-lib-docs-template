
$scrollbarBgColor = rgba(0, 0, 0, 0.26);
$scrollbarBgColorHover = rgba(0, 0, 0, 0.42);

/* 滚动条样式 */
.tulp-scrollbar
   overflow hidden
   position relative

.tulp-scrollbar__wrap 
  overflow scroll
  height 100%

.tulp-scrollbar__bar
  position absolute
  right 2px
  bottom 2px
  z-index 1
  border-radius 4px
  opacity 0
  transition opacity 120ms ease-out

.tulp-scrollbar__bar.is-horizontal
  height 6px
  left 2px

.tulp-scrollbar__bar.is-vertical
  width: 6px
  top: 2px

.tulp-scrollbar__bar.is-horizontal > div 
  height 100%

.tulp-scrollbar__thumb 
  position relative
  display block
  width 0
  height 0
  cursor pointer
  border-radius inherit
  background-color $scrollbarBgColor
  transition 0.3s background-color
  &:hover
    background-color $scrollbarBgColorHover

.tulp-scrollbar:active>.tulp-scrollbar__bar,
.tulp-scrollbar:focus>.tulp-scrollbar__bar,
.tulp-scrollbar:hover>.tulp-scrollbar__bar 
    opacity 1
    transition opacity 340ms ease-out

.tulp-scrollbar__bar.is-vertical 
    width 6px
    top 2px

.tulp-scrollbar__bar.is-vertical
    width 6px
    top 2px

.tulp-scrollbar__bar
    position absolute
    right 2px
    bottom 2px
    z-index 1
    border-radius 4px
    opacity 0
    transition opacity 120ms ease-out

.tulp-scrollbar__bar.is-vertical>div 
    width 100%

/* 修复滚动条bug */
.scrollbar-wrapper
  overflow-x hidden !important

.tulp-scrollbar
  height 100%
